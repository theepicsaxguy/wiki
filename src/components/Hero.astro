---
/**
 * Hero - Homepage hero section
 * Full-width background with centered content matching navigation width
 */
import Search from './Search';
import Icon from './Icon.astro';
import { getCollection } from 'astro:content';

// Get docs for search
const allDocs = await getCollection('docs');
const searchDocs = allDocs.map(doc => ({
  slug: doc.slug,
  title: doc.data.title,
  description: doc.data.description
}));
---

<section class="hero-section">
  <div class="container-content">
    <div class="hero-content">

      <!-- Welcome badge -->
      <div class="badge badge-outline-secondary hero-badge">
        <Icon name="hand-wave" size={24} class="hero-badge-icon" />
        <span>Welcome to our community!</span>
      </div>

      <!-- Heading -->
      <h1 class="hero-title">
        <span class="hero-title-primary">GoingDark.social</span>
        <br />
        <span class="hero-title-secondary">Community Wiki</span>
      </h1>

      <!-- Description -->
      <p class="hero-description">
        Your friendly guide to our privacy-focused Mastodon instance.
        <br class="hidden sm:block" />
        Learn about our values, get started, and join our community.
      </p>

      <!-- Quick actions -->
      <div class="hero-actions">
        <a href="/docs/user/getting-started" class="btn btn-ghost">
          <Icon name="rocket" size={18} class="hero-action-icon" />
          <span>Quick Start</span>
        </a>
        <a href="/docs/policies/rules" class="btn btn-ghost">
          <Icon name="scroll-text" size={18} class="hero-action-icon" />
          <span>Community Rules</span>
        </a>
        <a href="https://goingdark.social" target="_blank" rel="noopener noreferrer" class="btn btn-primary">
          <Icon name="sparkles" size={18} class="hero-action-icon" />
          <span>Join Instance</span>
          <Icon name="arrow-right" size={16} class="hero-action-arrow" />
        </a>
      </div>

      <!-- Decorative accents -->
      <div class="hero-accent hero-accent-top"></div>
      <div class="hero-accent hero-accent-bottom"></div>

      <!-- Search -->
      <div class="hero-search">
        <Search client:load docs={searchDocs} />
      </div>

      <!-- Search hint -->
      <div class="hero-hint">
        <div class="hero-hint-item">
          <kbd class="hero-kbd">Ctrl+K</kbd>
          <span>to search</span>
        </div>
        <span class="hero-hint-divider">â€¢</span>
        <span class="hero-hint-item">
          <svg class="hero-hint-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          <span>Instant answers</span>
        </span>
      </div>

    </div>
  </div>
</section>

<style>
  /* Hero Section - Full Width Background */
  .hero-section {
    position: relative;
    width: 100vw;
    margin-left: calc(50% - 50vw);
    padding-top: 4rem;
    padding-bottom: 4rem;
    background-image:
      radial-gradient(at 27% 37%, rgba(99, 100, 255, 0.12) 0px, transparent 50%),
      radial-gradient(at 97% 21%, rgba(255, 201, 84, 0.08) 0px, transparent 50%),
      radial-gradient(at 52% 99%, rgba(133, 138, 250, 0.08) 0px, transparent 50%),
      radial-gradient(at 10% 29%, rgba(99, 100, 255, 0.07) 0px, transparent 50%);
    overflow: hidden;
    animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @media (min-width: 768px) {
    .hero-section {
      padding-top: 6rem;
      padding-bottom: 6rem;
    }
  }

  /* Hero Content - Centered */
  .hero-content {
    position: relative;
    text-align: center;
  }

  /* Welcome Badge */
  .hero-badge {
    display: inline-flex;
    margin-bottom: 1.5rem;
    animation: scaleIn 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .hero-badge-icon {
    color: var(--color-secondary);
  }

  /* Hero Title */
  .hero-title {
    font-size: 2.25rem;
    font-weight: 800;
    font-family: var(--font-display);
    color: var(--color-text-white);
    letter-spacing: -0.035em;
    margin-bottom: 1.25rem;
    line-height: 1.1;
  }

  .hero-title-primary {
    background: linear-gradient(135deg, #ffffff 0%, #e0d5ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-title-secondary {
    color: var(--color-primary);
    font-size: 1.875rem;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3rem;
    }
    .hero-title-secondary {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 3.75rem;
    }
    .hero-title-secondary {
      font-size: 3rem;
    }
  }

  /* Hero Description */
  .hero-description {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 42rem;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 2rem;
    line-height: 1.7;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  @media (min-width: 768px) {
    .hero-description {
      font-size: 1.25rem;
    }
  }

  /* Hero Actions */
  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 2.5rem;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .hero-action-icon {
    transition: transform var(--transition-base);
  }

  .hero-actions a:hover .hero-action-icon {
    transform: scale(1.1);
  }

  .hero-action-arrow {
    transition: transform var(--transition-base);
  }

  .hero-actions a:hover .hero-action-arrow {
    transform: translateX(0.125rem);
  }

  /* Decorative Accents */
  .hero-accent {
    position: absolute;
    pointer-events: none;
    border-radius: 9999px;
    filter: blur(48px);
  }

  .hero-accent-top {
    top: 2.5rem;
    right: 2.5rem;
    width: 8rem;
    height: 8rem;
    background: linear-gradient(to bottom right, rgba(99, 100, 255, 0.1), rgba(255, 201, 84, 0.1));
  }

  .hero-accent-bottom {
    bottom: 2.5rem;
    left: 2.5rem;
    width: 10rem;
    height: 10rem;
    background: linear-gradient(to top right, rgba(255, 201, 84, 0.08), rgba(99, 100, 255, 0.08));
  }

  /* Hero Search */
  .hero-search {
    max-width: 32rem;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 1rem;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  /* Hero Hint */
  .hero-hint {
    font-size: 0.875rem;
    color: var(--color-text-subtle);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .hero-hint-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .hero-hint-divider {
    color: var(--color-surface-600);
  }

  .hero-kbd {
    padding: 0.375rem 0.75rem;
    background: var(--color-surface-800);
    border-radius: var(--radius-base);
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    font-weight: 600;
    border: 1px solid var(--color-surface-700);
  }

  .hero-hint-icon {
    width: 1rem;
    height: 1rem;
    color: var(--color-primary);
  }
</style>
