---
interface Props {
  title: string;
  icon?: string;
  href?: string;
}

const { title, icon, href } = Astro.props;
const Tag = href ? 'a' : 'div';
const linkProps = href ? { href, target: href.startsWith('http') ? '_blank' : undefined, rel: href.startsWith('http') ? 'noopener noreferrer' : undefined } : {};
---

<Tag
  class="group bg-surface border border-border rounded-lg p-6 hover:border-primary transition-colors"
  {...linkProps}
>
  {icon && (
    <div class="text-4xl mb-4">
      {icon}
    </div>
  )}
  <h3 class="text-lg font-semibold text-white mb-3 flex items-center gap-2">
    {title}
    {href && (
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    )}
  </h3>
  <div class="text-text-muted text-sm leading-relaxed">
    <slot />
  </div>
</Tag>
