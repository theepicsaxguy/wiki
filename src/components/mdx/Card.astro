---
interface Props {
  title: string;
  icon?: string;
  href?: string;
}

const { title, icon, href } = Astro.props;
const Tag = href ? 'a' : 'div';
const linkProps = href ? { href, target: href.startsWith('http') ? '_blank' : undefined, rel: href.startsWith('http') ? 'noopener noreferrer' : undefined } : {};
---

<Tag
  class="card-interactive group"
  {...linkProps}
>
  {icon && (
    <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center text-2xl mb-4 group-hover:bg-primary/20 group-hover:scale-110 transition-all">
      {icon}
    </div>
  )}
  <h3 class="text-xl font-bold text-white mb-3 flex items-center gap-2 group-hover:text-primary transition-colors">
    {title}
    {href && (
      <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    )}
  </h3>
  <div class="text-text-muted text-base leading-relaxed">
    <slot />
  </div>
</Tag>
