---
/**
 * DirectoryGrid - Category browsing grid for documentation sections
 * Extracted from index.astro to support MDX-driven architecture
 */
import { getCollection } from 'astro:content';
import Icon from './Icon.astro';

// Get all docs
// Note: Astro's content layer caches this data, so multiple getCollection calls
// in different components don't cause duplicate fetches
const allDocs = await getCollection('docs');

// Group docs by top-level folder with proper structure
interface Section {
  title: string;
  folder: string;
  pages: typeof allDocs;
  indexPage?: typeof allDocs[0];
}

const sections: Section[] = [];
const folderMap = new Map<string, Section>();

allDocs.forEach(doc => {
  const [folder] = doc.slug.split('/');
  if (folder === 'index') return; // Skip root index

  if (!folderMap.has(folder)) {
    const section: Section = {
      title: folder.charAt(0).toUpperCase() + folder.slice(1),
      folder: folder,
      pages: [],
    };
    folderMap.set(folder, section);
    sections.push(section);
  }

  const section = folderMap.get(folder);
  
  if (section) {
    // Check if this is the index page for the folder
    if (doc.slug === folder || doc.slug === `${folder}/index`) {
      section.indexPage = doc;
      section.title = doc.data.title; // Use actual title from index
    } else {
      section.pages.push(doc);
    }
  }
});
---

<section aria-label="Documentation categories" class="fade-in-up">
  <div class="mb-10">
    <h2 class="text-3xl md:text-4xl font-bold text-white mb-3 flex items-center gap-3" style="font-family: var(--font-display);">
      <div class="w-12 h-12 bg-gradient-to-br from-primary to-primary-active rounded-2xl flex items-center justify-center shadow-lg shadow-primary/30">
        <Icon name="folder" size={24} class="text-white" />
      </div>
      <span class="bg-gradient-to-r from-white to-purple-200 bg-clip-text text-transparent">Explore Our Wiki</span>
    </h2>
    <p class="text-text-muted text-lg ml-16 max-w-2xl">Find everything you need to know about our community, policies, and how to get started.</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
    {sections.map(section => (
      <article class="card-interactive group relative overflow-hidden">
        {/* Category Header */}
        <div class="mb-5 pb-4 border-b border-surface-700/30">
          {section.indexPage ? (
            <a href={`/docs/${section.folder}`} class="flex items-center justify-between group/header">
              <h3 class="text-xl font-bold text-white group-hover/header:text-primary transition-all flex items-center gap-3" style="font-family: var(--font-display);">
                <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center group-hover/header:from-primary/30 group-hover/header:to-primary/10 transition-all group-hover/header:scale-110 border border-primary/20">
                  <Icon name="folder" size={20} class="text-primary" />
                </div>
                <span class="group-hover/header:translate-x-1 transition-transform">{section.title}</span>
              </h3>
              <span class="text-xs font-semibold text-text-subtle bg-surface-750/80 px-3 py-1.5 rounded-full border border-surface-600">
                {section.pages.length} {section.pages.length === 1 ? 'page' : 'pages'}
              </span>
            </a>
          ) : (
            <div class="flex items-center justify-between">
              <h3 class="text-xl font-bold text-white flex items-center gap-3" style="font-family: var(--font-display);">
                <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center border border-primary/20">
                  <Icon name="folder" size={20} class="text-primary" />
                </div>
                {section.title}
              </h3>
              <span class="text-xs font-semibold text-text-subtle bg-surface-750/80 px-3 py-1.5 rounded-full border border-surface-600">
                {section.pages.length} {section.pages.length === 1 ? 'page' : 'pages'}
              </span>
            </div>
          )}
        </div>

        {/* Top Pages Preview (shows 3-4 pages) */}
        <ul class="space-y-2.5">
          {section.pages.slice(0, 4).map(page => (
            <li>
              <a
                href={`/docs/${page.slug}`}
                class="flex items-start gap-3 px-3 py-2 rounded-lg text-sm text-text-muted hover:text-white hover:bg-surface-750/50 transition-all group/link"
              >
                <span class="text-primary shrink-0 text-lg leading-none mt-0.5 group-hover/link:scale-125 transition-transform">â†’</span>
                <span class="leading-relaxed group-hover/link:translate-x-0.5 transition-transform">
                  {page.data.title}
                </span>
              </a>
            </li>
          ))}
          {section.pages.length > 4 && (
            <li class="pt-3">
              <a
                href={`/docs/${section.folder}`}
                class="text-sm text-primary hover:text-primary-hover font-semibold flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-primary/5 transition-all group/more"
              >
                <span>View all {section.pages.length} pages</span>
                <Icon name="arrow-right" size={16} class="group-hover/more:translate-x-1 transition-transform" />
              </a>
            </li>
          )}
        </ul>
      </article>
    ))}
  </div>
</section>
