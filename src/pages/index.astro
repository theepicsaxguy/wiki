---
import WikiLayout from '../layouts/WikiLayout.astro';
import Card from '../components/mdx/Card.astro';
import CardGrid from '../components/mdx/CardGrid.astro';
---

<WikiLayout title="Home - goingdark.social Wiki" description="Community documentation for goingdark.social">
  <div class="wiki-content">
    <h1>goingdark.social - Community Wiki</h1>

    <p class="text-xl text-text-main mb-8">
      Everything you need in one place. Whether you are looking for the rules, figuring out how to set up your profile, or curious about how we run the servers, you're in the right spot.
    </p>

    <CardGrid cols={2}>
      <Card title="Read the Docs" href="/docs/">
        Check out our documentation for rules and guides.
      </Card>
      <Card title="Instance Home" href="https://goingdark.social/">
        Head back to the timeline at goingdark.social.
      </Card>
    </CardGrid>
  </div>
</WikiLayout>
