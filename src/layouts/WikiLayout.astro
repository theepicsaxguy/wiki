---
import Navigation from '../components/Navigation.astro';
import Sidebar from '../components/Sidebar.astro';
import '../styles/global.css';

import type { NavItem } from '../utils/navigation';

interface Props {
  title?: string;
  description?: string;
  headings?: Array<{ depth: number; text: string; slug: string }>;
  currentSlug?: string;
  prevPage?: NavItem | null;
  nextPage?: NavItem | null;
}

const {
  title = 'goingdark.social Wiki',
  description = 'Documentation and wiki for goingdark.social - a privacy-focused Mastodon instance',
  headings = [],
  currentSlug = '',
  prevPage = null,
  nextPage = null
} = Astro.props;

const fullTitle = title === 'goingdark.social Wiki' ? title : `${title} | goingdark.social Wiki`;
const isDocsPage = Astro.url.pathname.startsWith('/docs');
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=JetBrains+Mono:wght@400;600&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen flex flex-col">
    <Navigation />

    <div class="flex-1 flex max-w-7xl mx-auto w-full">
      <!-- Docs Sidebar (Desktop Only) -->
      {isDocsPage && (
        <div class="hidden lg:block w-64 flex-shrink-0 border-r border-border px-4 py-8">
          <Sidebar />
        </div>
      )}

      <!-- Mobile Docs Sidebar (Drawer) -->
      {isDocsPage && (
        <>
          <!-- Mobile FAB Button -->
          <button
            id="mobile-sidebar-button"
            class="lg:hidden fixed bottom-6 right-6 z-40 w-14 h-14 bg-primary hover:bg-primary-hover text-white rounded-full shadow-lg flex items-center justify-center transition-colors"
            aria-label="Open navigation menu"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>

          <!-- Mobile Drawer -->
          <div id="mobile-sidebar-overlay" class="fixed inset-0 z-50 hidden lg:hidden">
            <!-- Backdrop -->
            <div class="absolute inset-0 bg-black/60" aria-hidden="true"></div>

            <!-- Drawer -->
            <div class="absolute top-0 left-0 h-full w-80 max-w-[85vw] bg-surface-900 border-r border-border shadow-2xl overflow-y-auto">
              <!-- Header -->
              <div class="sticky top-0 z-10 bg-surface-900 border-b border-border px-4 py-4 flex items-center justify-between">
                <h2 class="text-lg font-bold text-white">Navigation</h2>
                <button
                  id="mobile-sidebar-close"
                  class="p-2 hover:bg-surface-800 rounded-lg transition-colors"
                  aria-label="Close menu"
                >
                  <svg class="w-5 h-5 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </button>
              </div>

              <!-- Content -->
              <div class="p-4">
                <Sidebar />
              </div>
            </div>
          </div>
        </>
      )}

      <!-- Main Content -->
      <main class="flex-1 w-full min-w-0 px-4 sm:px-6 lg:px-8 py-8">
        <div class="max-w-4xl mx-auto">
          <!-- Breadcrumbs -->
          <nav class="mb-4" aria-label="Breadcrumb">
            <ol class="flex items-center gap-2 text-sm text-text-muted font-mono">
              <li><a href="/" class="hover:text-primary transition-colors">docs</a></li>
              <li><span class="text-surface-600">/</span></li>
              <li class="text-text-main">{title}</li>
            </ol>
          </nav>

          <!-- Article Content Card -->
          <article class="wiki-content bg-surface-900 border border-border rounded-lg p-6 sm:p-8">
            <slot />
          </article>

          <!-- Next/Previous Navigation -->
          {(prevPage || nextPage) && (
            <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4">
              {prevPage ? (
                <a
                  href={`/docs/${prevPage.slug}`}
                  class="flex items-center gap-3 p-4 bg-surface-900 border border-border rounded-lg hover:border-primary transition-all group"
                >
                  <svg class="w-5 h-5 text-text-muted group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                  <div class="flex-1">
                    <div class="text-xs text-text-muted mb-1">Previous</div>
                    <div class="font-medium text-white group-hover:text-primary transition-colors">{prevPage.title}</div>
                  </div>
                </a>
              ) : (
                <div></div>
              )}
              {nextPage && (
                <a
                  href={`/docs/${nextPage.slug}`}
                  class="flex items-center gap-3 p-4 bg-surface-900 border border-border rounded-lg hover:border-primary transition-all group text-right"
                >
                  <div class="flex-1">
                    <div class="text-xs text-text-muted mb-1">Next</div>
                    <div class="font-medium text-white group-hover:text-primary transition-colors">{nextPage.title}</div>
                  </div>
                  <svg class="w-5 h-5 text-text-muted group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              )}
            </div>
          )}

          <!-- Article Footer -->
          <div class="mt-6 pt-6 px-6 bg-surface-900 border border-border rounded-lg">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
              <div class="flex flex-col gap-2">
                {currentSlug && (
                  <a
                    href={`https://github.com/theepicsaxguy/wiki/blob/main/src/content/docs/${currentSlug}.mdx`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-sm text-text-muted hover:text-primary transition-colors inline-flex items-center gap-2"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Edit this page on GitHub
                  </a>
                )}
                <p class="text-sm text-text-muted">Have questions? <a href="mailto:admin@goingdark.social" class="text-primary hover:underline">admin@goingdark.social</a></p>
              </div>
              <a
                href="https://goingdark.social"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-primary hover:bg-primary-hover rounded-lg text-sm font-medium text-white transition-all duration-200"
              >
                Join our instance
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </main>

      <!-- Table of Contents Sidebar (Desktop Only) -->
      <aside class="hidden xl:block w-64 flex-shrink-0 sticky top-16 h-[calc(100vh-4rem)] overflow-y-auto px-4 py-8 border-l border-border">
        <div class="space-y-6">
          {headings.length > 0 && (
            <div>
              <h3 class="text-xs font-semibold text-text-muted uppercase tracking-wider mb-3">On this page</h3>
              <nav id="table-of-contents" class="space-y-2 text-sm" aria-label="Table of contents">
                {headings.map((heading) => (
                  <a
                    href={`#${heading.slug}`}
                    class:list={[
                      "block py-1.5 text-text-muted hover:text-primary transition-colors border-l-2 border-transparent hover:border-primary",
                      heading.depth === 3 ? "pl-4 text-xs" : "pl-2"
                    ]}
                    data-heading-link
                  >
                    {heading.text}
                  </a>
                ))}
              </nav>
            </div>
          )}

          <div class="pt-6 border-t border-border">
            <h3 class="text-xs font-semibold text-text-muted uppercase tracking-wider mb-3">Quick Links</h3>
            <ul class="space-y-2 text-sm">
              <li>
                <a href="/docs/policies/rules" class="text-text-muted hover:text-primary transition-colors flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  Server Rules
                </a>
              </li>
              <li>
                <a href="/docs/legal/privacy" class="text-text-muted hover:text-primary transition-colors flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                  Privacy Policy
                </a>
              </li>
              <li>
                <a href="https://joinmastodon.org/" target="_blank" rel="noopener noreferrer" class="text-text-muted hover:text-primary transition-colors flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                  About Mastodon
                </a>
              </li>
            </ul>
          </div>
        </div>
      </aside>
    </div>

    <!-- Footer -->
    <footer class="bg-surface-900 border-t border-border mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="md:col-span-2">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 bg-gradient-to-br from-primary to-purple-600 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <div>
                <h3 class="text-white font-semibold">goingdark.social</h3>
                <p class="text-xs text-text-muted">Privacy-focused Mastodon</p>
              </div>
            </div>
            <p class="text-text-muted text-sm max-w-md">
              A community-driven, privacy-focused Mastodon instance. Part of the decentralized Fediverse.
            </p>
          </div>

          <div>
            <h3 class="text-white font-semibold mb-4 text-sm">Resources</h3>
            <ul class="space-y-3">
              <li><a href="/" class="text-text-muted hover:text-primary transition-colors text-sm">Home</a></li>
              <li><a href="/docs/policies/rules" class="text-text-muted hover:text-primary transition-colors text-sm">Server Rules</a></li>
              <li><a href="/docs/legal/privacy" class="text-text-muted hover:text-primary transition-colors text-sm">Privacy Policy</a></li>
              <li><a href="https://joinmastodon.org/" target="_blank" rel="noopener noreferrer" class="text-text-muted hover:text-primary transition-colors text-sm">About Mastodon</a></li>
            </ul>
          </div>

          <div>
            <h3 class="text-white font-semibold mb-4 text-sm">Contact</h3>
            <ul class="space-y-3 text-sm">
              <li class="text-text-muted">admin@goingdark.social</li>
              <li class="text-text-muted">@admin@goingdark.social</li>
              <li class="mt-4">
                <a href="https://goingdark.social" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-primary to-purple-600 hover:from-primary-hover hover:to-purple-700 text-white text-sm font-medium rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl">
                  Join Now
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </a>
              </li>
            </ul>
          </div>
        </div>

        <div class="mt-12 pt-8 border-t border-surface-700 flex flex-col sm:flex-row justify-between items-center gap-4">
          <p class="text-sm text-text-muted text-center sm:text-left">
            &copy; {new Date().getFullYear()} goingdark.social. Powered by <a href="https://joinmastodon.org/" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">Mastodon</a>.
          </p>
          <p class="text-xs text-text-muted text-center sm:text-right">
            Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">Astro</a> â€¢ Part of the Fediverse
          </p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile Sidebar Toggle
      const mobileButton = document.getElementById('mobile-sidebar-button');
      const mobileOverlay = document.getElementById('mobile-sidebar-overlay');
      const mobileClose = document.getElementById('mobile-sidebar-close');

      if (mobileButton && mobileOverlay) {
        mobileButton.addEventListener('click', () => {
          mobileOverlay.classList.remove('hidden');
          document.body.style.overflow = 'hidden';
        });

        const closeSidebar = () => {
          mobileOverlay.classList.add('hidden');
          document.body.style.overflow = '';
        };

        mobileClose?.addEventListener('click', closeSidebar);
        mobileOverlay.addEventListener('click', (e) => {
          if (e.target === mobileOverlay || e.target.classList.contains('bg-black/60')) {
            closeSidebar();
          }
        });

        // Close on ESC
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && !mobileOverlay.classList.contains('hidden')) {
            closeSidebar();
          }
        });
      }

      // Table of Contents Active State (IntersectionObserver)
      document.addEventListener('DOMContentLoaded', () => {
        const headingLinks = document.querySelectorAll('[data-heading-link]');

        if (headingLinks.length === 0) return;

        const headings = Array.from(headingLinks).map(link => {
          const href = link.getAttribute('href');
          if (!href) return null;
          return document.querySelector(href);
        }).filter(Boolean);

        if (headings.length === 0) return;

        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                const id = entry.target.id;
                headingLinks.forEach((link) => {
                  const href = link.getAttribute('href');
                  if (href === `#${id}`) {
                    link.classList.remove('text-text-muted', 'border-transparent');
                    link.classList.add('text-primary', 'border-primary');
                  } else {
                    link.classList.remove('text-primary', 'border-primary');
                    link.classList.add('text-text-muted', 'border-transparent');
                  }
                });
              }
            });
          },
          { rootMargin: '-100px 0px -66%' }
        );

        headings.forEach((heading) => observer.observe(heading));
      });

      // Smooth scroll for anchor links
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href') || '');
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        });
      });
    </script>
  </body>
</html>
