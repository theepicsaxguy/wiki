---
import Navigation from '../components/Navigation.astro';
import WikiSidebar from '../components/WikiSidebar.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'goingdark.social Wiki', description = 'Documentation and wiki for goingdark.social - a privacy-focused Mastodon instance' } = Astro.props;
const fullTitle = title === 'goingdark.social Wiki' ? title : `${title} | goingdark.social Wiki`;
const isWikiPage = Astro.url.pathname.startsWith('/wiki');
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;600&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen flex flex-col">
    <Navigation />

    <div class="flex-1 flex max-w-7xl mx-auto w-full">
      <!-- Wiki Sidebar (Desktop Only) -->
      {isWikiPage && (
        <div class="hidden lg:block w-64 flex-shrink-0 border-r border-surface-700/50 px-4 py-8">
          <WikiSidebar />
        </div>
      )}

      <!-- Main Content -->
      <main class="flex-1 w-full min-w-0">
        <div class={isWikiPage ? "max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8" : "max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-12"}>
          <!-- Breadcrumbs -->
          <nav class="mb-8" aria-label="Breadcrumb">
            <ol class="flex items-center gap-2 text-sm text-text-muted">
              <li><a href="/" class="hover:text-primary transition-colors">Home</a></li>
              <li><span class="text-surface-600">/</span></li>
              <li class="text-white font-medium">{title}</li>
            </ol>
          </nav>

          <!-- Article Content -->
          <article class="wiki-content">
            <slot />
          </article>

          <!-- Article Footer -->
          <div class="mt-16 pt-8 border-t border-surface-700">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
              <div class="text-sm text-text-muted">
                <p>Have questions? Reach out to <a href="mailto:admin@goingdark.social" class="text-primary hover:underline">admin@goingdark.social</a></p>
              </div>
              <a
                href="https://goingdark.social"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-4 py-2 bg-surface-800 hover:bg-surface-700 border border-surface-600 rounded-lg text-sm font-medium text-white transition-all duration-200"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
                Join our instance
              </a>
            </div>
          </div>
        </div>
      </main>

      <!-- Table of Contents Sidebar (Desktop Only) -->
      <aside class="hidden xl:block w-64 flex-shrink-0 sticky top-16 h-[calc(100vh-4rem)] overflow-y-auto px-4 py-8 border-l border-surface-700/50">
        <div class="space-y-6">
          <div>
            <h3 class="text-xs font-semibold text-text-muted uppercase tracking-wider mb-3">On this page</h3>
            <nav id="table-of-contents" class="space-y-2 text-sm" aria-label="Table of contents">
              <!-- TOC will be populated by JavaScript -->
            </nav>
          </div>

          <div class="pt-6 border-t border-surface-700/50">
            <h3 class="text-xs font-semibold text-text-muted uppercase tracking-wider mb-3">Quick Links</h3>
            <ul class="space-y-2 text-sm">
              <li>
                <a href="/rules" class="text-text-muted hover:text-primary transition-colors flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  Server Rules
                </a>
              </li>
              <li>
                <a href="/privacy" class="text-text-muted hover:text-primary transition-colors flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                  Privacy Policy
                </a>
              </li>
              <li>
                <a href="https://joinmastodon.org/" target="_blank" rel="noopener noreferrer" class="text-text-muted hover:text-primary transition-colors flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                  About Mastodon
                </a>
              </li>
            </ul>
          </div>
        </div>
      </aside>
    </div>

    <!-- Footer -->
    <footer class="bg-surface-900 border-t border-surface-700 mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="md:col-span-2">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 bg-gradient-to-br from-primary to-purple-600 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <div>
                <h3 class="text-white font-semibold">goingdark.social</h3>
                <p class="text-xs text-text-muted">Privacy-focused Mastodon</p>
              </div>
            </div>
            <p class="text-text-muted text-sm max-w-md">
              A community-driven, privacy-focused Mastodon instance. Part of the decentralized Fediverse.
            </p>
          </div>

          <div>
            <h3 class="text-white font-semibold mb-4 text-sm">Resources</h3>
            <ul class="space-y-3">
              <li><a href="/" class="text-text-muted hover:text-primary transition-colors text-sm">Home</a></li>
              <li><a href="/rules" class="text-text-muted hover:text-primary transition-colors text-sm">Server Rules</a></li>
              <li><a href="/privacy" class="text-text-muted hover:text-primary transition-colors text-sm">Privacy Policy</a></li>
              <li><a href="https://joinmastodon.org/" target="_blank" rel="noopener noreferrer" class="text-text-muted hover:text-primary transition-colors text-sm">About Mastodon</a></li>
            </ul>
          </div>

          <div>
            <h3 class="text-white font-semibold mb-4 text-sm">Contact</h3>
            <ul class="space-y-3 text-sm">
              <li class="text-text-muted">admin@goingdark.social</li>
              <li class="text-text-muted">@admin@goingdark.social</li>
              <li class="mt-4">
                <a href="https://goingdark.social" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-primary to-purple-600 hover:from-primary-hover hover:to-purple-700 text-white text-sm font-medium rounded-lg transition-all duration-200 shadow-lg hover:shadow-xl">
                  Join Now
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                </a>
              </li>
            </ul>
          </div>
        </div>

        <div class="mt-12 pt-8 border-t border-surface-700 flex flex-col sm:flex-row justify-between items-center gap-4">
          <p class="text-sm text-text-muted text-center sm:text-left">
            &copy; {new Date().getFullYear()} goingdark.social. Powered by <a href="https://joinmastodon.org/" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">Mastodon</a>.
          </p>
          <p class="text-xs text-text-muted text-center sm:text-right">
            Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">Astro</a> â€¢ Part of the Fediverse
          </p>
        </div>
      </div>
    </footer>

    <script>
      // Generate Table of Contents
      document.addEventListener('DOMContentLoaded', () => {
        const article = document.querySelector('.wiki-content');
        const toc = document.getElementById('table-of-contents');

        if (!article || !toc) return;

        const headings = article.querySelectorAll('h2, h3');

        if (headings.length === 0) {
          toc.innerHTML = '<p class="text-text-muted text-xs">No headings found</p>';
          return;
        }

        headings.forEach((heading, index) => {
          const id = heading.id || `heading-${index}`;
          heading.id = id;

          const link = document.createElement('a');
          link.href = `#${id}`;
          link.textContent = heading.textContent || '';
          link.className = `block py-1.5 text-text-muted hover:text-primary transition-colors border-l-2 border-transparent hover:border-primary ${
            heading.tagName === 'H3' ? 'pl-4 text-xs' : 'pl-2'
          }`;

          toc.appendChild(link);

          // Highlight active section on scroll
          const observer = new IntersectionObserver(
            (entries) => {
              entries.forEach((entry) => {
                if (entry.isIntersecting) {
                  document.querySelectorAll('#table-of-contents a').forEach((a) => {
                    a.classList.remove('text-primary', 'border-primary');
                    a.classList.add('text-text-muted', 'border-transparent');
                  });
                  link.classList.remove('text-text-muted', 'border-transparent');
                  link.classList.add('text-primary', 'border-primary');
                }
              });
            },
            { rootMargin: '-100px 0px -66%' }
          );

          observer.observe(heading);
        });
      });

      // Smooth scroll for anchor links
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href') || '');
          if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          }
        });
      });
    </script>
  </body>
</html>
